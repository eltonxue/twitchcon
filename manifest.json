{
  "manifest_version": 2,
  "name": "RCR",
  "description": "TwitchCon",
  "version": "0.0.0.1",
  "background": {
    "scripts": ["event.js"],
    "persistent": true
  },
  "browser_action": {
    "default_title": "RCR Example",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": [],
      "js": ["content.js"]
    }
  ]
}
